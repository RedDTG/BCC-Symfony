{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>PrixDeDepart</th>
                <th>Etat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prixDeDepart }}</td>
                <td>{{ produit.etat }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('produit_show', {'id': produit.id}) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-sm btn-warning" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Ajouter Produit</a>
{% endblock %}
